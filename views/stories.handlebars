<div class="fullwidth-header relative">
    <h1 class="absolute">Once Upon a Time...</h1>
</div>
<div class="page-body">
    <div class="row">
        <div class="block s12">
            <div class="row">
                <div class="col xl6 l12">
                    <h2 class="chooseStory">START A NEW STORY</h2>
                    <p>See the stories already in our library!</p>
                    <!--<input type="dropdown" class="form-control" id="locationEnterOption">
                            <a class="dropdown-trigger btn" href='#' data-target='dropdown1' id="locationDropdown"><i
                                    class="fas fa-filter"></i></a>
                            <ul id='dropdown1' class='dropdown-content'>
                                <li><a href="#!">North Carolina<i class="material-icons">cloud</i></a></li>
                                <li><a href="#!">London<i class="material-icons">cloud</i></a></li>
                                <li><a href="#!">Washington DC<i class="material-icons">cloud</i></a></li>
                            </ul>-->
                    <div id="user-stories">
                        {{#each stories }}
                        <div class="row">
                            <div class="col s12 m12 l6 xl12">
                                <div class="card medium story-card">
                                    <div class="card-image" id="story-image">
                                        <img src={{ storyImage }}>
                                    </div>
                                    <div class="card-content">
                                        <span class="card-title" id="story-title">{{ storyName }}</span>
                                        <h6>{{ location }}</h6>
                                        <!--<h6>A STORY BY: {{ user.firstName }} {{ user.lastName }}</h6>-->
                                        <p>{{ info }}</p>
                                    </div>
                                    <div class="card-action">
                                        <a href="/story/{{ slug }}">Start story</a>
                                    </div>
                                </div>
                            </div>
                        </div>
                        {{/each}}
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

{{#section 'script'}}

<script type="text/javascript" src="/js/stories.js"></script>

{{/section}}