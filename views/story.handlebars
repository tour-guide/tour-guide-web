<div class="fullwidth-header relative">
        <h1 class="absolute">Once Upon a Time...</h1>
    </div>
    <div class="page-body">
        <div class="row">
            <div class="block s12">
                <div class="row">
                    <div class="col l6 s12 story-card">
                        <div id="story-image">
                            <img
                                src={{ storyImage }}>
                        </div>
                        <h2 id="story-title">{{ storyName }}</h2>
                        <div id="author-block">
                            <!--<div id="author">
                                <h6>CONTRIBUTED BY</h6>
                                <div id="author-name">{{ user.firstName }} {{ user.lastName }}</div>
                            </div>-->
                        </div>
                        <div id="directions-map">
                            <iframe width="100%" height="300"
                                src={{ google }}></iframe>
                        </div>
                        {{#each chapter}}
                        <div id="chapters">
                            <div id="chapter1">
                                <h3 id="chapter-title">{{chapName}}</h3>
                                <figure>
                                    <audio controls src={{chapAudio}}>
                                        Your browser does not support the
                                        <code>audio</code> element.
                                    </audio>
                                </figure>
                            </div>
                        </div>
                        {{/each}}
                        <div id="rating"></div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    
{{#section 'script'}}

<script type="text/javascript" src="/js/storypage.js"></script>

{{/section}}